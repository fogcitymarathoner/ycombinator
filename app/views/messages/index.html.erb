<h1>Listing messages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Recipient</th>
    <th>Sender</th>
    <th>Created at</th>
    <th>Deleted at</th>
    <th>Read at</th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%=h message.title %></td>
    <td><%=h message.body %></td>
    <td><%=h message.recipient_id %></td>
    <td><%=h message.sender_id %></td>
    <td><%=h message.created_at %></td>
    <td><%=h message.deleted_at %></td>
    <td><%=h message.read_at %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message', new_message_path %>