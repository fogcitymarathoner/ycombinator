
<% form_for(@user_session, :url => { :controller => "user_session_mc", :action => "validate_signup" }) do |form| %>
  <%= form.error_messages %>
  
  <p>
    <%= form.label :login %>
    <%= form.text_field :login %>
  </p>
  
  <p>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </p>

  <%= form.submit 'Login' %>
<% end %>